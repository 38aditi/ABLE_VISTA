    },
    {
      "name": "Feedback",
      "routes": [
        {
          "method": "GET",
          "url": "/api/feedback",
          "description": "Get all feedback",
          "queryParams": {
            "type": "bug_report",
            "category": "technical_issue",
            "status": "open",
            "priority": "high",
            "page": "1",
            "limit": "10"
          }
        },
        {
          "method": "POST",
          "url": "/api/feedback",
          "description": "Create a new feedback",
          "body": {
            "user": "user_id",
            "type": "bug_report",
            "relatedTo": {
              "course": "course_id"
            },
            "title": "Video not playing",
            "description": "The video lesson is not loading properly",
            "category": "technical_issue",
            "priority": "high"
          }
        },
        {
          "method": "GET",
          "url": "/api/feedback/:id",
          "description": "Get feedback by ID"
        },
        {
          "method": "PUT",
          "url": "/api/feedback/:id",
          "description": "Update feedback",
          "body": {
            "status": "in_progress",
            "priority": "medium"
          }
        },
        {
          "method": "DELETE",
          "url": "/api/feedback/:id",
          "description": "Delete feedback"
        }
      ]
    }
  ],
  "notes": {
    "baseUrl": "Change this to your actual server URL",
    "authentication": "Add Authorization header with Bearer token if required",
    "pathParams": "Replace :id with actual IDs when testing",
    "queryParams": "All query parameters are optional",
    "pagination": "Use page and limit for paginated results"
  }
}
